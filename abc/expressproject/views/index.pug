extends layout

block content
  h1= 'Home'
  p Welcome to #{title} 
  
  
  form(action='/save', method='get')
    .row
      .input-field.col.s6
        input#first_name.validate( type='text', name='firstName')
        label(for='first_name') First Name
      .input-field.col.s6
        input#last_name.validate(type='text', name='lastName')
        label(for='last_name') Last Name
    .row
      .input-field.col.s6
        input#email.validate(type='email', name='email')
        label(for='email') Email
      .input-field.col.s6
        input#email.validate(type='number', name='age')
        label(for='number') Age
    .row  
      button.btn(type='submit') Go
  
  